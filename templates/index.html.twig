{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-10 col-sm-9 col-md-6 col-lg-5 col-xl-4 col-xxl-3 mx-auto">
    <div data-controller="carousel" class="swiper" data-carousel-options-value='{"autoplay": true}'>
        <div class="swiper-wrapper">
            {% for dish_photo in dish_photos %}
                <figure class="swiper-slide figure gallery-image-container">
                    <img alt="Gallery image" src="{{ asset(dish_photo.image) }}"
                         class="gallery-image img-fluid w-75 mx-auto d-block figure-img shadow">
                    <figcaption class="position-absolute top-50 start-50 translate-middle dish-caption alert alert-light">{{ dish_photo.title }}</figcaption>
                </figure>
            {% endfor %}
        </div>
    </div>
    <div class="vstack mx-auto text-center gap-3 my-3">
        <a class="btn btn-lg btn-primary col-7 mx-auto shadow" id="reserve-link-main"
           href="{{ path('app_reservation') }}">RÃ©server</a>
        <a class="btn btn-secondary border-primary shadow-sm d-block col-5 mx-auto" id="menu-link" href="{{ path('app_menu') }}">Carte et Menus</a>
    </div>
    </div>
{% endblock %}