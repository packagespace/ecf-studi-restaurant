<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        Le Quai Antique
        {% if block("title") is not empty %}
         - {% block title %}{% endblock %}
        {% endif %}
    </title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<header>
    <h1 id="restaurant-name">
        Le Quai Antique
    </h1>
    <nav>
        {% if is_granted('ROLE_USER') %}
            <a id="logout-link" href="{{ path('app_logout') }}"><img src="" alt="Se déconnecter"></a>
        {% else %}
            <a id="login-link" href="{{ path('app_login') }}"><img src="" alt="Se connecter"></a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            <a id="admin-panel-link" href="{{ path('admin') }}"><img src="" alt="Panel administrateur"></a>
        {% endif %}
        <a id="reserve-link">Réserver</a>
    </nav>
</header>
{% block body %}{% endblock %}
<footer>
    {{ render(path('app_opening_hours')) }}
</footer>
</body>
</html>
