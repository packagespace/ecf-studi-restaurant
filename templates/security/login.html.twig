{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <form method="post" class="vstack col-9 col-sm-6 col-md-5 col-lg-4 col-xl-3 mx-auto my-3">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <label class="form-label" for="inputEmail">Adresse email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3"
               autocomplete="email" required autofocus>
        <label class="form-label" for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="btn btn-lg btn-primary col-9 mx-auto shadow-sm" type="submit">
            Connexion
        </button>
        <a href="{{ path('app_register') }}" class="d-block btn btn-secondary border border-primary btn-sm col-6 mx-auto mt-3">Cr√©er un compte</a>
    </form>

{% endblock %}
