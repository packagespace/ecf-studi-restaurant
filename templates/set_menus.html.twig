{% extends 'base.html.twig' %}

{% block title %}Carte et Menus{% endblock %}

{% block body %}
    <nav class="nav nav-pills nav-fill mb-3">
    <a class="nav-link" href="{{ path('app_menu') }}">Carte</a>
    <a class="nav-link active" aria-current="page" href="#">Menus</a>
    </nav>
    <ul id="menus" class="row px-3">
        {% for menu in menus %}
            <li class="menu col m-3 list-unstyled">
                <h3 class="display-6 text-center">{{ menu.name }}</h3>
                <ul class="menu-set-menus list-unstyled">
                    {% for set_menu in menu.setMenus %}
                        <li class="set-menu vstack text-center">
                            <span class="set-menu-description">{{ set_menu.description }}</span>
                            <span class="set-menu-price">{{ set_menu.price }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>
{% endblock %}