{% extends 'base.html.twig' %}

{% block title %}Dish Photos{% endblock %}

{% block body %}
    {% for dish_photo in dish_photos %}
        <figure>
            <img id="{{ dish_photo.title }}-image" alt="Dish photo" src="{{ vich_uploader_asset(dish_photo, 'imageFile') }}" class="dish-photo">
            <figcaption id="{{ dish_photo.title }}-caption">{{ dish_photo.title }}</figcaption>
        </figure>
    {% endfor %}
    {{ form(form) }}
{% endblock %}
