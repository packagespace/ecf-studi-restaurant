<div class="text-primary mx-auto text-center h4 my-2">Horaires</div>
<dl class="mx-3">
    {% for day in day_opening_hours %}
        <div class="row text-nowrap lh-1">
            <dt class="col-4 text-end">
                <small>
                    {{ day.getDayLabel | trans }}
                </small>
            </dt>
            {% if day.isClosed %}
                <dd class="col-8 text-center">
                    <small>
                        Ferm√©
                    </small></dd>
            {% else %}
                <dd class="col-4">

                    {% if day.isOpenForLunch %}
                        <small>
                            {{ day.getLunchOpeningTime }}:00 - {{ day.getLunchClosingTime }}:00
                        </small>

                    {% endif %}
                </dd>
                <dd class="col-4">
                    {% if day.isOpenForDinner %}
                        <small>
                            {{ day.getDinnerOpeningTime }}:00 - {{ day.getDinnerClosingTime }}:00
                        </small>

                    {% endif %}
                </dd>
            {% endif %}

        </div>
    {% endfor %}
</dl>