<dl>
    {% for day in day_opening_hours %}
        <dt>
            {{ day.getDayLabel | trans }}
        </dt>
        {% if day.isOpenForLunch %}
            <dd>
                {{ day.getLunchOpeningTime }}:00 - {{ day.getLunchClosingTime }}:00
            </dd>
        {% endif %}
        {% if day.isOpenForDinner %}
            <dd>
                {{ day.getDinnerOpeningTime }}:00 - {{ day.getDinnerClosingTime }}:00
            </dd>
        {% endif %}
        {% if day.isClosed %}
            <dd>
                Ferm√©
            </dd>
        {% endif %}
    {% endfor %}
</dl>